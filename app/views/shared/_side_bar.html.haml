.side-bar
  .side-bar__top
    .side-bar__top__box
      %p.side-bar__top__box__user-name
        = current_user.name
      %ul.side-bar__top__box__menu
        %li.side-bar__top__box__menu___new-group
          =link_to new_group_path do
            =icon('fas', 'edit')
        %li.side-bar__top__box__menu__edit-account
          =link_to edit_user_path(current_user) do
            =icon('fas', 'cog')
  .side-bar__bottom
    - current_user.groups.each do |group|
      .side-bar__bottom__box
        =link_to '#' do
          .side-bar__bottom__box__group-name
            =group.name        
          .side-bar__bottom__box__new-message
            まだメッセージはありません
