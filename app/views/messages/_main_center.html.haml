.chat-main__center
  .chat-main__message{"data-message-id": "#{message.id}"}
    .chat-main__message__data
      %p.chat-main__message__data__name
        =message.user.name
      %p.chat-main__message__data__date
        =message.created_at.to_s
    .chat-main__message
      - if message.text.present?
        %p.chat-main__message__text
          =message.text
      =image_tag message.image.url, class: 'chat-main__message__image' if message.image.url.present?