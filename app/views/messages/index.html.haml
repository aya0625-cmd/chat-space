.wrapper
  .side-bar
    =render "shared/side_bar"
  .chat-main
    =render "main_top", locals: {message: @messages}
    .chat-main__center
      =render @messages
    .chat-main__bottom
      =form_for [@group, @message], html: { class: "chat-form",remote: true} do |f|
        .input-box
          =f.text_field :text, class: 'input-box__form', placeholder: 'type a message'
          =f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            .file-btn
              =f.file_field :image, class: 'file-btn'
        =f.submit 'Send', class: 'submit-btn'
    
         